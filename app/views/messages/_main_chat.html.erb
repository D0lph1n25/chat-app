<div class="chat_top">
  <div class="chat_room">hogefuga
  </div>
  <div class="chat_end">
    <div class="chat_button">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="chat_center">
  <div class="chat_message">
    <div class="chat_upper_message">
      <div class="chat_name">Tom</div>
      <div class="chat_day">2023/8/18(Fri)23:00:00</div>
    </div>
    <div class="chat_under_message">
      <div class="chat_text">おはよう</div>
    </div>
  </div>
  <div class="chat_message">
    <div class="chat_upper_message">
      <div class="chat_name">Tom</div>
      <div class="chat_day">2023/8/18(Fri)23:20:00</div>
    </div>
    <div class="chat_under_message">
      <div class="chat_text">こんばんわ</div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'chat_under', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>