<div class="chat_message">
  <div class="chat_upper_message">
    <div class="chat_name">
    <%= message.user.name %>
    </div>
    <div class="chat-day">
      <!-- 投稿した時刻を出力する -->
      <%= l message.created_at %>
    </div>
  </div>
  <div class="chat_under_message">
    <div class="chat_text">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= message.content %>
    </div>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached?  %>
  </div>
</div>